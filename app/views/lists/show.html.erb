<h1><%=@list.name%></h1>

<ul>
  <% @list.bookmarks.each do |bookmark| %>
    <li>
    <%= bookmark.movie.title %>
    <%= link_to 'Remove', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class: "btn btn-primary" %>
    </li>
  <% end %>
</ul>

<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>
<%= link_to 'Back to your lists', root_path %>
